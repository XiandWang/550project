<li class="media">
  <div class="media-left">
    <%= link_to(gravatar_for(like.user), like.user) %>
  </div>
  <div class="media-body">
    <h4 class="media-heading inline"><%= link_to(like.user.name, like.user) %> has liked: </h4>
    <span class="timestamp"><%= time_ago_in_words(like.created_at) %></span>
    <div class="box panel panel-default">
      <%= image_tag(like.movie.poster) %>
      <div class="panel-footer">
        <h3 class="center"><%= link_to like.movie.title, like.movie %></h3>
      </div>
</li>