	<div class="row">
		<div class="col-md-2 col-md-offset-2">
			<%= image_tag(@movie.poster, size: "200") %>
		</div>
		<div class="col-md-6 middle">
			<p class="title"><%= @movie.title %></p> 
			<span><%= @movie.release_date %> </span>
			<p>rating: <%= @movie.rating %></p>
			<h5>Overview: </h5>
			<span><%= @movie.overview %></span>
			<div>
			    <table class="table table-hover">
			      <thead>
			        <tr>
			          <th></th>
			          <th>Name</th>
			          <th>Job</th>
			        </tr>
			      </thead>

			      <tbody>
			        <% @crews.each do |crew| %>
			          <tr>
			          	<% if crew.person.profile.blank? %>
			          	  <td><%=  image_tag("chiwawa.jpeg", size:"50") %></td>
			          	<% else %>
			              <td><%= image_tag(crew.person.profile, size: "50") %></td>
			            <% end %>
			            <td><%= link_to crew.person.name, crew.person  %></td>
			            <td><%= crew.job %></td>
			          </tr>
			        <% end %>
			      </tbody>
			    </table>
			    <table class="table table-hover">
			      <thead>
			        <tr>
			          <th></th>
			          <th>Name</th>
			          <th>Character</th>
			        </tr>
			      </thead>

			      <tbody>
			        <% @casts.each do |cast| %>
			          <tr>
			          	<% if cast.person.profile.blank? %>
			          	  <td><%=  image_tag("chiwawa.jpeg", size:"50") %></td>
			          	<% else %>
			              <td><%= image_tag(cast.person.profile, size: "50") %></td>
			            <% end %>
			            <td><%= link_to cast.person.name, cast.person  %></td>
			            <td><%= cast.character %></td>
			          </tr>
			        <% end %>
			      </tbody>
			    </table>			
			</div>
		</div>
	</div>

