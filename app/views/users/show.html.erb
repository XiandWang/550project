<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= link_to (gravatar_for(@user)), @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
       <%= render 'shared/stats' %>
    </section>
    <section>
    	<% if user_signed_in? %>
    		<%= render('follow_form', user: @user) %>
    	<% end %>
    </section>
  </aside>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><h4><%= @user.name %> has liked:</h3></div>
      <div class="panel-body" style="background-color:#ecf0f1;">
        <ul class="likes">
          <%= render @likes %>
        </ul>
      </div>
    </div>
  </div>
</div>