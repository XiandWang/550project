<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= @genre.name %>'s Movies</h1>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Rating</th>
        </tr>
      </thead>

      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td><%= link_to movie.title, movie  %></td>
            <td><%= movie.rating %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= will_paginate @movies %>
  </div>
</div>
