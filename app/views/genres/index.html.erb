<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>All Genres</h1>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Movies Count</th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to genre.name, genre  %></td>
            <td><%= genre.movies.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
